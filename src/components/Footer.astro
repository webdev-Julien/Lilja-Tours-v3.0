    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-16 lg:gap-16 mb-16">

      <!-- Company Info Section -->
      <div class="flex flex-col gap-8 lg:order-1 order-1">
        <div class="flex items-center gap-4 mb-4 justify-center lg:justify-start">
