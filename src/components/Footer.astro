<style>
  .luxury-footer {
    background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
    color: white;
    padding: 6rem 0 0 0;
    position: relative;
  }

  .footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 4rem;
    margin-bottom: 4rem;
  }

  /* Company Info Section */
  .company-info {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .company-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .footer-logo {
    height: 50px;
    width: auto;
    filter: brightness(0) invert(1);
  }

  .company-name {
    font-size: clamp(1.3rem, 2.5vw, 1.6rem);
    font-weight: 400;
    letter-spacing: 0.5px;
    margin: 0;
    color: white;
  }

  .company-details {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .company-detail {
    font-size: clamp(0.9rem, 1.8vw, 1rem);
    font-weight: 300;
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    letter-spacing: 0.3px;
  }

  .travel-license {
    margin-top: 1rem;
  }

  .license-logo {
    width: 75%;
    height: auto;
    border-radius: 4px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease;
  }

  .license-logo:hover {
    transform: scale(1.05);
  }

  /* Footer Sections */
  .footer-section-title {
    font-size: clamp(1.1rem, 2.2vw, 1.3rem);
    font-weight: 400;
    letter-spacing: 1px;
    margin: 0 0 1.5rem 0;
    color: white;
    text-transform: uppercase;
  }

  /* Navigation Links */
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-link {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    font-size: clamp(0.95rem, 1.9vw, 1.1rem);
    font-weight: 300;
    letter-spacing: 0.3px;
    transition: all 0.3s ease;
    position: relative;
    padding-left: 0;
  }

  .footer-link::before {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 1px;
    background: #5b7297;
    transition: width 0.3s ease;
  }

  .footer-link:hover {
    color: white;
    transform: translateX(5px);
  }

  .footer-link:hover::before {
    width: 100%;
  }

  /* Social Links */
  .social-links {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-top: 0.5rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    aspect-ratio: 1;
  }

  .social-link:hover {
    background: #5b7297;
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(91, 114, 151, 0.3);
    border-color: #5b7297;
  }

  .social-icon {
    width: 25px;
    height: 25px;
    fill: rgba(255, 255, 255, 0.8);
    transition: fill 0.3s ease;
  }

  .social-link:hover .social-icon {
    fill: white;
  }

  /* Footer Bottom */
  .footer-divider {
    width: 100%;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.2) 50%, transparent 100%);
    margin-bottom: 2rem;
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 0;
    border-top: none;
  }

  .copyright {
    font-size: clamp(0.85rem, 1.7vw, 0.95rem);
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
    letter-spacing: 0.3px;
  }

  .footer-bottom-links {
    display: flex;
    gap: 2rem;
  }

  .footer-bottom-link {
    font-size: clamp(0.85rem, 1.7vw, 0.95rem);
    font-weight: 300;
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    letter-spacing: 0.3px;
    transition: color 0.3s ease;
  }

  .footer-bottom-link:hover {
    color: rgba(255, 255, 255, 0.9);
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .luxury-footer {
      padding: 4rem 0 0 0;
    }

    .footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      margin-bottom: 3rem;
    }

    .company-info {
      grid-column: 1 / -1;
      order: -1;
    }

    .company-header {
      justify-content: center;
      text-align: center;
    }

    .company-details {
      align-items: center;
      text-align: center;
    }

    .travel-license {
      text-align: center;
    }

    .license-logo {
      width: 40%;
      height: auto;
      margin-inline: auto;
    }

    .footer-section-title {
      text-align: center;
    }

    .navigation-links {
      text-align: center;
    }

    .social-links {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  @media (max-width: 768px) {
    .luxury-footer {
      padding: 3rem 0 0 0;
    }

    .footer-container {
      padding: 0 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      margin-bottom: 2.5rem;
    }

    .company-header {
      flex-direction: column;
      gap: 0.75rem;
    }

    .license-logo {
      width: 50%;
      height: auto;
      margin-inline: auto;
    }

    .footer-section-title {
      text-align: center;
    }

    .navigation-links {
      text-align: center;
    }

    .social-links {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.75rem;
    }

    .social-link {
      padding: 0.5rem;
    }

    .social-icon {
      width: 18px;
      height: 18px;
    }

    .footer-bottom-content {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .footer-bottom-links {
      gap: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .luxury-footer {
      padding: 2.5rem 0 0 0;
    }

    .footer-content {
      gap: 2rem;
      margin-bottom: 2rem;
    }

    .company-info {
      gap: 1.5rem;
    }

    .license-logo {
      width: 60%;
      height: auto;
      margin-inline: auto;
    }

    .footer-section-title {
      text-align: center;
    }

    .navigation-links {
      text-align: center;
    }

    .social-links {
      grid-template-columns: repeat(3, 1fr);
      gap: 0.5rem;
    }

    .social-link {
      padding: 0;
    }

    .social-icon {
      width: 30px;
      height: 30px;
    }

    .footer-bottom-links {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>