---
// Footer.astro
export interface Props {
  currentLang?: 'en' | 'fr';
}

const { currentLang = 'en' } = Astro.props;
---

<footer class="bg-gradient-to-br from-gray-900 to-gray-700 text-white pt-24 relative">
